<body>
    <!HEADER/!>
        <%- include('../partials/header')%>
    <main>
        <section class="formRegister">
            <h2>Unete a nosotros!</h2>
            <input class="controls" type="email" name="email" id="email" placeholder="Email">
            <input class="controls" type="text" name="nombre" id="nombre" placeholder="Nombre">
            <input class="controls" type="text" name="apellido" id="apellido" placeholder="Apellido">
            <input class="controls" type="password" name="contraseña" id="contraseña" placeholder="Contraseña">
            <input class="controls" type="password" name="confirmar contraseña" id="confirmar contraseña" placeholder="Confirmar contraseña">
            <p>¿Ya tienes una cuenta?<a class="login" href="/user/login">Iniciar sesión.</a></p>
            <button id="button-continuar">
                Continuar
            </button>
            <p class="separador">o</p>
            <button class="Google">
                <i class="fa-brands fa-google"></i>
                Continuar con Google
            </button>
        </section>
    </main>
    <!FOOTER/!>
        <%- include('../partials/footer')%>
</body>
</html>
